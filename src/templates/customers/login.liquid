<div class="container-fluid">

  <div class="row hide">
    {% include 'breadcrumbs' %}
  </div>

  <div class="row mt100 align-items-center" data-login-form>
    <div class="col-md-6 mx-auto mb-3  left_area">

      <div class="text-success hide" data-reset-success>
        {{ 'customer.recover_password.success' | t }}
      </div>
      <!-- <h1>{{ 'customer.login.title' | t }}</h1> -->
      <h1 class="mb-5" style="max-width: 470px;">Welcome to our wholesale channel. Free shipping inside.</h1>
      {% form 'customer_login' %}

      {{ form.errors | default_errors }}

      <div class="form-group">
        <label for="CustomerEmail" class="">
          {{ 'customer.login.email' | t }}
        </label>
        <input type="email"
               name="customer[email]"
               id="CustomerEmail"
               class="form-control {% if form.errors contains 'email' %}input-error{% endif %}"
               placeholder="{{ 'customer.login.email' | t }}"
               spellcheck="false"
               autocomplete="off"
               autocapitalize="off"
               autofocus>
      </div>

      {% if form.password_needed %}
        <div class="form-group">
          <label for="CustomerPassword" class="">
            {{ 'customer.login.password' | t }}
          </label>
          <input type="password"
                 name="customer[password]"
                 id="CustomerPassword"
                 class="form-control {% if form.errors contains 'password' %}input-error{% endif %}"
                 placeholder="{{ 'customer.login.password' | t }}">
          {% if form.password_needed %}
            <small class="mt-3 d-block"><a href="#recover" data-recover-toggle>{{ 'customer.login.forgot_password' | t }}</a></small>
          {% endif %}
        </div>
      {% endif %}

      <input type="submit" class="btn btn-primary mb-5" value="{{ 'customer.login.sign_in' | t }}">

      {% endform %}

      <!-- <h2>New Customer?</h2> -->
      <!-- <p>Sign up for an account to take advantage of order history as well as
      pre-filled forms during checkout on subsequent orders.</p> -->

      <p class="mb-5">Wants to join the James Ay family? <br /> Create account <a style="text-decoration: underline !important;" href="/account/register">click here</a></p>
      <!-- <a class="btn btn-primary mb-3" href="/account/register">
        {{ 'layout.customer.create_account' | t }}
      </a> -->

    </div>
    <div class="col-md-6 mx-auto mb-3 right_area">
        <img class="max380 mx-auto d-block" src="https://cdn.shopify.com/s/files/1/0504/0773/5470/files/james-ay-diego-sunglasses.jpg?v=1612847784" alt="">
    </div>
  </div>

  <div class="hide row mt100 align-items-center" data-recover-form>
    <div class="col-md-6 mx-auto mb-3  left_area">
      <h1 class="mb-5">{{ 'customer.recover_password.title' | t }}</h1>
      <p>{{ 'customer.recover_password.subtext' | t }}</p>

      {% form 'recover_customer_password', class: 'reset_password_form' %}
      <div class="form-group">
        {{ form.errors | default_errors }}

        {% if form.posted_successfully? %}
          <span class="hide" data-form-state></span>
        {% endif %}

        <label for="RecoverEmail" class="label-hidden">
          {{ 'customer.recover_password.email' | t }}
        </label>
        <input type="email"
               name="email"
               class="form-control"
               id="RecoverEmail"
               placeholder="{{ 'customer.recover_password.email' | t }}"
               spellcheck="false"
               autocomplete="off"
               autocapitalize="off">

      </div>
      <div class="mb-3 pt-3">
        <input type="submit" class="btn btn-primary" value="{{ 'customer.recover_password.submit' | t }}">

        <button class="btn btn-primary" type="button" data-recover-toggle>
          {{ 'customer.recover_password.cancel' | t }}
        </button>
      </div>

        {% endform %}
    </div>
    <div class="col-md-6 mx-auto mb-3 right_area">
      <img class="max380 mx-auto d-block" src="https://cdn.shopify.com/s/files/1/0504/0773/5470/files/james-ay-diego-sunglasses.jpg?v=1612847784" alt="">
    </div>    
  </div>

  {% if shop.checkout.guest_login %}
    <h2>{{ 'customer.login.guest_title' | t }}</h2>

    {% form 'guest_login' %}
    <input type="submit" class="btn btn-primary" value="{{ 'customer.login.guest_continue' | t }}">
    {% endform %}
  {% endif %}
</div>
